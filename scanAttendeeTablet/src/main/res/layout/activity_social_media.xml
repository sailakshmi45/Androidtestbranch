<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_button_color"
            android:orientation="vertical"
            android:visibility="visible" >
            <Button
                android:id="@+id/close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|end"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/white_cross"
                android:visibility="visible" />
            <TextView
                android:id="@+id/txt_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/login_with_socials"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="@color/green_button_color"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <com.globalnest.classes.RoundedImageView
                android:id="@+id/img_event_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/default_image" />

            <TextView
                android:id="@+id/txt_eventname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Event Name"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="www.googol.com"
                android:textColor="@color/white"
                android:textSize="@dimen/TextAppearance.12sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="0dp"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/txt_startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:text="20th Sep 2014, 11.00 AM"
                            android:textColor="@color/light_green"
                            android:textSize="@dimen/font_v_small" />

                        <TextView
                            android:id="@+id/txt_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:alpha=".8"
                            android:maxLines="2"
                            android:paddingTop="1dp"
                            android:text="30th Sep 2014, 11.00 AM"
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_v_small" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/location" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_eventloc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="Location"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_n_small" />

                        <TextView
                            android:id="@+id/txt_eventaddress"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="Address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_n_small"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_eventcitystate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="City, State"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_n_small" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_1dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_border"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/txt_eventname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:text="GNMDC Event Expo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_title" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/img_event_logo"
                        android:layout_width="90dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/image_border"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_image" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_startdate"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="5dp"
                            android:drawableLeft="@drawable/calendar"
                            android:drawablePadding="5dp"
                            android:maxLines="2"
                            android:text="20th Sep 2014, 11.00 AM 20th Sep 2014, 11.00 AM "
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_n_small" />

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitXY"
                                android:src="@drawable/location" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="30dp"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/txt_eventloc"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:maxLines="2"
                                    android:paddingLeft="5dp"
                                    android:text="Location"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_n_small" />

                                <TextView
                                    android:id="@+id/txt_eventaddress"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:maxLines="2"
                                    android:paddingLeft="5dp"
                                    android:text="Address"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_n_small"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txt_eventcitystate"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:maxLines="2"
                                    android:paddingLeft="5dp"
                                    android:text="City, State"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_n_small" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_color" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txt_eventdesc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginRight="55dp"
                        android:drawablePadding="15dp"
                        android:maxLines="2"
                        android:paddingLeft="5dp"
                        android:text="This is event description which is going to happen tomorrrow tank you"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_n_small" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/event_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:background="@drawable/intractive_edit_text"
                android:gravity="center"
                android:padding="10dp"
                android:text="www.googol.com"
                android:textSize="@dimen/TextAppearance.14sp"
                android:visibility="visible" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:gravity="bottom"
                android:weightSum="3" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/login"
                        android:layout_width="@dimen/layout_55dp"
                        android:layout_height="@dimen/layout_55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/facebook_icon" />

                    <TextView
                        android:id="@+id/txt_fb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/layout_2dp"
                        android:text="@string/facebook"
                        android:visibility="gone"
                        android:textSize="@dimen/TextAppearance.14sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="@dimen/layout_2dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:background="@color/fb_color" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_linkedin"
                        android:layout_width="@dimen/layout_60dp"
                        android:layout_height="@dimen/layout_60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/linkedin_icon" />

                    <TextView
                        android:id="@+id/txt_linkedin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/linkedIn"
                         android:visibility="gone"
                        android:textSize="@dimen/TextAppearance.14sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/layout_2dp"
                        android:layout_marginRight="@dimen/layout_2dp"
                        android:layout_marginTop="@dimen/layout_3dp"
                        android:background="@color/linkedin_color" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_twitter"
                        android:layout_width="@dimen/layout_55dp"
                        android:layout_height="@dimen/layout_55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/twitter_icon" />

                    <TextView
                        android:id="@+id/txt_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/layout_2dp"
                        android:text="@string/twitter"
                         android:visibility="gone"
                        android:textSize="@dimen/TextAppearance.14sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/layout_2dp"
                        android:layout_marginTop="@dimen/layout_5dp"
                        android:background="@color/twitter_color" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/layout_2dp"
           
            android:background="@color/gray_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="bottom"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_fb_logou"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/layout_2dp"
                    android:text="Logout"
                    android:textColor="@color/fb_color"
                    android:background="@drawable/list_selector"
                    android:textSize="@dimen/TextAppearance.14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/gray_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_linkedin_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                     android:gravity="center"
                    android:text="Logout"
                     android:layout_marginTop="@dimen/layout_2dp"
                    android:background="@drawable/list_selector"
                    android:textColor="@color/linkedin_color"
                    android:textSize="@dimen/TextAppearance.14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/gray_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                

                <Button
                    android:id="@+id/btn_twitter_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/layout_2dp"
                    android:text="Logout"
                    android:background="@drawable/list_selector"
                    android:textColor="@color/twitter_color"
                    android:textSize="@dimen/TextAppearance.14sp" />

               
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>