<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TicketCartActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/shadow_border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtcart_t_Name"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="Ticket/Item"
                android:textColor="@color/green_button_color"
                android:textSize="@dimen/font_title"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_delete_cart_item"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight=".2"
                android:padding="5dp"
                android:visibility="visible"
                android:src="@drawable/error" />
        </LinearLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:background="@drawable/line_effect" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight=".8"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/green_button_color"
                    android:padding="5dp"
                    android:text="Ticket/Item"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_title"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ticketframelayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Qty"
                        android:textColor="@color/orange_bg"
                        android:textSize="@dimen/font_title" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Price"
                        android:textColor="@color/orange_bg"
                        android:textSize="@dimen/font_title" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fee"
                        android:textColor="@color/orange_bg"
                        android:textSize="@dimen/font_title" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tax"
                        android:textColor="@color/orange_bg"
                        android:textSize="@dimen/font_title" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Total"
                        android:textColor="@color/orange_bg"
                        android:textSize="@dimen/font_title" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ticketframelayout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/txtcart_t_Qty"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Qty"
                        android:textColor="@color/green_button_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/txtcart_t_Price"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Price"
                        android:textColor="@color/green_button_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/txtcart_t_Fee"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fee"
                        android:textColor="@color/green_button_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/txtcart_t_Tax"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tax"
                        android:textColor="@color/green_button_color"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/txtcart_t_total"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Total"
                        android:textColor="@color/green_button_color"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>