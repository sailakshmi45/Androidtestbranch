<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/event_detailsscreen_whitebg"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <ImageView
            android:id="@+id/imgresult"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/success" />

        <TextView
            android:id="@+id/txtresult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgresult"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Scanned Successfully"
            android:textColor="@color/black"
            android:textSize="@dimen/font_big" />

        <FrameLayout
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtresult"
            android:layout_margin="15dp"
            android:background="@color/header_stroke" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnresult"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="VIEW"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnscancancel"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="SCAN ANOTHER"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>