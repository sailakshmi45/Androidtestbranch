<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_border"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txteventname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="2dp"
            android:text="GNMDC Event Expo"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/font_title"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgeventbg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="5dp"
                android:background="@drawable/image_border"
                android:scaleType="centerInside"
                android:src="@drawable/default_image" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendar" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:id="@+id/txtstartdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:alpha=".9"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="20th Sep 2014, 11.00 AM "
                            android:textColor="@color/green_button_color"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtenddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="0dp"
                            android:alpha=".9"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="20th Sep 2014, 11.00 AM "
                            android:textColor="@color/orange_bg"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/txtstartdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="5dp"
                    android:maxLines="2"
                    android:text="20th Sep 2014, 11.00 AM 20th Sep 2014, 11.00 AM "
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/font_verysmall"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/addresslayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="3dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/location" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical"
                        android:paddingBottom="5dp" >

                        <TextView
                            android:id="@+id/eventloc"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="Location"
                            android:textColor="@color/gray_color"
                            android:textSize="12dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/eventaddress"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="Address"
                            android:textColor="@color/gray_color"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/eventcitystate"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:text="City, State"
                            android:textColor="@color/gray_color"
                            android:textSize="12dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/b1_transparent"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-9dp"
        android:background="@drawable/shadow_border" >

        <TextView
            android:id="@+id/txteventdesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="55dp"
            android:drawableLeft="@drawable/more"
            android:drawablePadding="15dp"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:text="This is event description which is going to happen tomorrrow tank you"
            android:textColor="@color/black"
            android:textSize="@dimen/font_n_small"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgeventshare"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:src="@drawable/share" />

        <FrameLayout
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="2dp"
            android:background="@color/b1_transparent" />

        <ImageView
            android:id="@+id/imgeventmore"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="45dp"
            android:padding="10dp"
            android:src="@drawable/vertical_more" />

        <FrameLayout
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="2dp"
            android:background="@color/b1_transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_time_zone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/green_button_color"
                android:textSize="16dp" />

            <FrameLayout
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:background="@color/b1_transparent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgcheckedin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/checkedin_icon"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/eventendline"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:background="@color/event_date_red_bg"
        android:visibility="gone" />

</LinearLayout>