<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_margin="0dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/screen_bg_color" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="left|top"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left|top"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/eventlogo"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/image_border"
                            android:scaleType="centerInside"
                            android:src="@drawable/default_image" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@color/light_gray"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/edtEventName"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/line_effect"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789,-_$%@#()*+&apos;"
                                android:gravity="center_vertical"
                                android:hint="Event Name(required)"
                                android:inputType="textCapWords"
                                android:maxLength="255"
                                android:padding="5dp"
                                android:paddingLeft="0dp"
                                android:textColor="@color/green_button_color"
                                android:textSize="@dimen/font_header"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@color/screen_bg_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/rounded_corner_layout"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/frame_start_date"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtstart"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="Start Date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp" >

                            <TextView
                                android:id="@+id/txtstartdate"
                                android:layout_width="165dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="left|center_vertical"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/font_normal" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/screen_bg_color" />

                            <TextView
                                android:id="@+id/txtstarttime"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/font_normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:id="@+id/frame_end_date"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtend"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="End Date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp" >

                            <TextView
                                android:id="@+id/txtenddate"
                                android:layout_width="165dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="left|center_vertical"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/font_normal" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/screen_bg_color" />

                            <TextView
                                android:id="@+id/txtendtime"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/font_normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtlocation"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Location"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <EditText
                            android:id="@+id/editEventLocation"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="12dp"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:hint="Required"
                            android:inputType="textCapWords"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtaddress"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Street"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <EditText
                            android:id="@+id/editEventAddress"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="12dp"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:hint="Optional"
                            android:inputType="textCapWords"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtcountry"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Country"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <Spinner
                            android:id="@+id/editCountry"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight=".6"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:text="--None--"
                            android:textSize="@dimen/font_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtcuurency"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Currency"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <Spinner
                            android:id="@+id/editcurrency"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight=".6"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:text="--None--"
                            android:textSize="@dimen/font_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtstate"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="State"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <Spinner
                            android:id="@+id/editState"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight=".6"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:imeOptions="actionDone"
                            android:maxLines="2"
                            android:text="--None--"
                            android:textSize="@dimen/font_normal" />

                        <TextView
                            android:id="@+id/txtstate_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".2"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_title" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtcity"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="City"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <EditText
                            android:id="@+id/editCity"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="12dp"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:hint="Optional"
                            android:inputType="textCapWords"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtZipCode"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Zip Code"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <EditText
                            android:id="@+id/editZipCode"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="12dp"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:hint="Optional"
                            android:inputType="textCapWords"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />

                    <LinearLayout
                        android:id="@+id/frame_event_title"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtdesc"
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="7dp"
                            android:gravity="top"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_big" />

                        <EditText
                            android:id="@+id/edtEventDes"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left|top"
                            android:layout_marginLeft="12dp"
                            android:background="@android:color/white"
                            android:gravity="left|top"
                            android:hint="Optional"
                            android:inputType="textCapSentences|textMultiLine|textVisiblePassword"
                            android:maxLines="3"
                            android:paddingTop="5dp"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/header_stroke" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frame_pay_setting"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_button_selector"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/txt_pay_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="15dp"
                        android:text="Payment Setting"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_pay_setting"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="15dp"
                        android:background="@color/light_gray"
                        android:src="@drawable/more" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>