<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/personName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="105dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/purMoney"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="$10.00"
                    android:textColor="@color/green_button_color"
                    android:textSize="@dimen/font_small"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <com.globalnest.autoresizetextview.AutoResizeTextView
                    android:id="@+id/buyeremail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:layout_marginRight="130dp"
                    android:singleLine="true"
                    android:text="lamxanamurthy.kandi@globalnest.com"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/font_small" />

                 <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Check Not Recieved"
                    android:textColor="@color/black_faded"
                    android:textSize="@dimen/font_small"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" >

                <TextView
                    android:id="@+id/salesorderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/black_faded"
                    android:textSize="@dimen/font_small"
                    android:visibility="visible" />
    
                <TextView
                    android:id="@+id/order_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black_faded"
                    android:textSize="@dimen/font_small"
                    android:visibility="visible" /> 
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/purdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black_faded"
                    android:textSize="@dimen/font_small"
                    android:visibility="visible" />
            </FrameLayout>
            
            
            <TextView
                 android:id="@+id/compName"
               
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/black_faded"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/txt_chequenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:text="Check no"
                android:textColor="@color/black_faded"
                android:textSize="@dimen/font_small"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>